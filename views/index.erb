<% if user %>
<h2>Hello! <%= user.name %></h2>
<form action="/logout", method="POST">
<input type="submit" name="logout" value="Log Out">
</form>
<br>

<h4>Pending tasks till <%= Time.now %></h4>

<form action="/add_task" method="POST">
<textarea name="content" placeholder="Task to do..."></textarea>
<!-- <input type="text" name="task" /> --> <br>
<input type="submit" value="Add Task" />
</form>



<ul>

<% 
if tasks
tasks.each do |task|  %>
<br>
<li> 

	<% if task.done %>
		<div class="strikethrough">
	<% end %>
	<% if task.important %>
		<div class="bold_imp">
	<% end %>
	<% if task.urgent %>
		<div class="red_urgent">
	<% end %>

	<%= task.content %>

	<br>
	</div></div></div>

	<article class="align">
	<form action="/toggle_task" method="POST">
	<input type="hidden" name="task_id" value="<%= task.id %>" >
	<input type="submit" value="toggle task" >
	</form>
	</article>

	<article class="align">
	<form action="/important_task" method="POST">
	<input type="hidden" name="task_id" value="<%= task.id %>" >
	<input type="submit" value="important" >
	</form>
	</article>

	<article class="align">
	<form action="/urgent_task" method="POST">
	<input type="hidden" name="task_id" value="<%= task.id %>" >
	<input type="submit" value="urgent" >
	</form>
	</article>

	
	</li>
<% end %>
<% end %>
</ul>


<style>
	.strikethrough {
		text-decoration: line-through;
	}
	.bold_imp {
		font-weight: bold;
	}
	.red_urgent {
		color: red;
	}
	article.align {
		display: inline-block;
	}
</style>

<% end %>
